{
  "name": "system-migrate",
  "version": "0.1.0",
  "tasks": {
    "test": "deno task test:build && deno task test:run system-migrate-test",
    "test:build": "deno run --allow-run tests/helpers/build.ts",
    "test:run": "deno run --allow-run tests/helpers/run.ts",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt"
  },
  "imports": {
    "$lib/": "./lib/",
    "$tests/": "./tests/",
    "$commands/": "./commands/",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/fs": "jsr:@std/fs@^1.0.11",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true
  },
  "compilerOptions": {
    "strict": true
  }
} 